    <uses-permission android:name="android.permission.MOUNT_FORMAT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name="com.arcfun.aifenx.ui.AFXApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeNoTitle" >
        <activity
            android:name="com.arcfun.aifenx.ui.LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arcfun.aifenx.ui.MenuActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arcfun.aifenx.ui.MenuCreateActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.arcfun.aifenx.ui.MenuCreateEnsureActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arcfun.aifenx.ui.MenuCreateResultActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arcfun.aifenx.ui.MenuRecyleActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arcfun.aifenx.ui.MenuRecyleNewActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arcfun.aifenx.ui.MenuRecyleNewEnsureActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.arcfun.aifenx.ui.MenuRecyleDetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="com.arcfun.aifenx.zxing.client.CaptureActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
