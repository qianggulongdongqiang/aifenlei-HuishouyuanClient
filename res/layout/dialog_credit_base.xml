<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dialog_item_top"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_item_height"
        android:layout_gravity="center_horizontal"
        android:weightSum="11"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/finishe_credit_end"
            android:gravity="right"
            android:layout_weight="6"
            android:textColor="@color/login_title"
            android:textSize="@dimen/actionbar_text_size" />

        <TextView
            android:id="@+id/dialog_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/list_text_padding"
            android:hint="@string/finishe_credit_end"
            android:gravity="left"
            android:layout_weight="5"
            android:textColor="@color/login_title"
            android:textSize="@dimen/actionbar_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_item_height"
        android:layout_gravity="center_horizontal"
        android:weightSum="11"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/credit_input_way"
            android:gravity="right"
            android:layout_weight="6"
            android:textColor="@color/login_title"
            android:textSize="@dimen/actionbar_text_size" />

        <TextView
            android:id="@+id/dialog_way"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/list_text_padding"
            android:hint="@string/credit_input_way"
            android:gravity="left"
            android:layout_weight="5"
            android:textColor="@color/login_title"
            android:textSize="@dimen/actionbar_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_item_height"
        android:layout_gravity="center_horizontal"
        android:weightSum="11"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/credit_input_msg"
            android:gravity="right"
            android:layout_weight="6"
            android:textColor="@color/login_title"
            android:textSize="@dimen/actionbar_text_size" />

        <TextView
            android:id="@+id/dialog_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/list_text_padding"
            android:hint="@string/credit_input_msg"
            android:gravity="left"
            android:layout_weight="5"
            android:textColor="@color/login_title"
            android:textSize="@dimen/actionbar_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_item_height"
        android:layout_gravity="center_horizontal"
        android:weightSum="11"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/credit_input_more"
            android:gravity="right"
            android:layout_weight="6"
            android:textColor="@color/login_title"
            android:textSize="@dimen/actionbar_text_size" />

        <TextView
            android:id="@+id/dialog_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/list_text_padding"
            android:hint="@string/credit_input_name_hint"
            android:gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_weight="5"
            android:textColor="@color/login_title"
            android:textSize="@dimen/actionbar_text_size" />
    </LinearLayout>
</LinearLayout>