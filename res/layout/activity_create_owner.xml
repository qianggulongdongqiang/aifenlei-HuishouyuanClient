<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.arcfun.aifenx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/backgroud" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_button_height"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin" >

        <TextView
            android:id="@+id/account_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/list_text_padding"
            android:text="@string/account_title"
            android:textColor="@color/login_title"
            android:textSize="@dimen/login_input_hint" />

        <Button
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/scan" />

        <EditText
            android:id="@+id/input_account"
            android:layout_toRightOf="@id/account_title"
            android:layout_toLeftOf="@id/scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/account_msg"
            android:ellipsize="middle"
            android:inputType="text"
            android:paddingStart="@dimen/list_text_margin"
            android:textColor="@color/login_title"
            android:textColorHint="@color/input_hint"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/login_input_hint" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin"
        android:background="@color/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_button_height"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/list_text_padding"
            android:text="@string/owner_title"
            android:textColor="@color/login_title"
            android:textSize="@dimen/login_input_hint" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/owner_msg"
            android:inputType="text"
            android:paddingStart="@dimen/list_text_margin"
            android:textColor="@color/login_title"
            android:textColorHint="@color/input_hint"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/login_input_hint" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin"
        android:background="@color/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_button_height"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/list_text_padding"
            android:text="@string/sex_title"
            android:textColor="@color/login_title"
            android:textSize="@dimen/login_input_hint" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/list_radiogroup_margin"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/radio_group_selector"
                android:checked="true"
                android:gravity="center"
                android:paddingStart="@dimen/list_radiobtn_margin"
                android:text="@string/sex_male"
                android:textColor="@color/login_title"
                android:textSize="@dimen/login_input_hint" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/list_radiobtn_padding"
                android:button="@drawable/radio_group_selector"
                android:checked="false"
                android:gravity="center"
                android:paddingStart="@dimen/list_radiobtn_margin"
                android:text="@string/sex_female"
                android:textColor="@color/login_title"
                android:textSize="@dimen/login_input_hint" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin"
        android:background="@color/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_button_height"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/list_text_padding"
            android:text="@string/contact_title"
            android:textColor="@color/login_title"
            android:textSize="@dimen/login_input_hint" />

        <EditText
            android:id="@+id/input_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/contact_msg"
            android:inputType="phone"
            android:paddingStart="@dimen/list_text_margin"
            android:textColor="@color/login_title"
            android:textColorHint="@color/input_hint"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/login_input_hint" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin"
        android:background="@color/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_button_height"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin"
        android:orientation="horizontal"
        android:weightSum="4" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/list_text_padding"
            android:text="@string/addr_title"
            android:textColor="@color/login_title"
            android:textSize="@dimen/login_input_hint" />

        <com.arcfun.aifenx.view.SpinnerView
            android:id="@+id/spinner_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/listview_selector"
            app:text_hint="@string/addr_city_hint" />

        <com.arcfun.aifenx.view.SpinnerView
            android:id="@+id/spinner_district"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/listview_selector"
            app:text_hint="@string/addr_district_hint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin"
        android:orientation="horizontal"
        android:weightSum="2" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/split_line" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/list_text_padding"
            android:layout_weight="1"
            android:background="@color/split_line" />
    </LinearLayout>

    <EditText
        android:id="@+id/input_addr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_button_height"
        android:background="@null"
        android:hint="@string/addr_msg"
        android:inputType="text"
        android:paddingStart="@dimen/split_line_margin"
        android:textColor="@color/login_title"
        android:textColorHint="@color/input_hint"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="@dimen/login_input_hint" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginStart="@dimen/list_margin"
        android:background="@color/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/create_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_button_height"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/login_title"
            android:textSize="@dimen/menu_text_size" />
    </LinearLayout>

</LinearLayout>