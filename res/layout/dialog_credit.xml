<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_layout_width"
    android:layout_height="@dimen/dialog_credit_height"
    android:background="@drawable/dialog_backgroud" >

    <LinearLayout
        android:id="@+id/dialog_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/list_ensure_margin"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/split_line_margin"
        android:paddingStart="@dimen/split_line_margin"
        android:weightSum="2" >

        <Button
            android:id="@+id/dialog_left"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_light"
            android:text="@string/dialog_left"
            android:textColor="@color/login_title"
            android:textSize="@dimen/actionbar_text_size" />

        <Button
            android:id="@+id/dialog_right"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/list_radiobtn_padding"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_dark"
            android:text="@string/dialog_right"
            android:textColor="@color/login_title"
            android:textSize="@dimen/actionbar_text_size" />
    </LinearLayout>

    <include layout="@layout/dialog_credit_base" />

</RelativeLayout>