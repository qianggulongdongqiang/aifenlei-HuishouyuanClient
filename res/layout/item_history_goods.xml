<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/pre_order_title_height"
        android:layout_marginStart="@dimen/list_margin"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_history_good_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/list_text_padding"
            android:textColor="@color/login_title"
            android:textSize="@dimen/login_input_hint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/pre_order_title_height"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/result_title_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_history_good_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/list_text_padding"
            android:textColor="@color/login_title"
            android:textSize="@dimen/login_input_hint" />
        <TextView
            android:id="@+id/item_history_good_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/history_good_credit"
            android:textColor="@color/login_title"
            android:textSize="@dimen/login_input_hint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/pre_order_title_height"
        android:gravity="center_horizontal|end"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_history_good_credit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/list_text_padding"
            android:textColor="@color/login_title"
            android:textSize="@dimen/login_input_hint" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/history_good_credit"
            android:textColor="@color/login_title"
            android:textSize="@dimen/login_input_hint" />
    </LinearLayout>

</LinearLayout>